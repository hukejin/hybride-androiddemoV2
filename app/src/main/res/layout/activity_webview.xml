<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootline"
    android:background="@android:color/white">

    <!--包括了webview，进度条，标题栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--标题栏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/navline"
            android:orientation="horizontal">
            <!--左上返回-->
            <TextView
                android:id="@+id/navbacktv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:drawableLeft="@drawable/back_normal"
                android:drawablePadding="1dp"
                android:gravity="center"
                android:textColor="@color/navbartxtcolor"
                android:text="返回">
            </TextView>
            <!--标题栏-->
            <TextView
                android:id="@+id/navtitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:gravity="center"
                android:textColor="@color/navbartitlecolor"
                android:textStyle="bold"
                android:textSize="16sp">
            </TextView>
            <!-- 右侧按钮 -->
            <TextView
                android:id="@+id/navright"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/navbartxtcolor">
            </TextView>

        </LinearLayout>
        <!-- 页面加载进度条 -->
        <ProgressBar
            android:id="@+id/webprogress"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal"
            />

        <!-- webview -->
        <cn.com.hesc.library.ExtendsWebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">
        </cn.com.hesc.library.ExtendsWebView>
    </LinearLayout>
    <!--加载失败展示图-->
    <ImageView
        android:id="@+id/reload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/reloading"
        android:visibility="gone"/>
    <!--支持input file 多选和拍照-->
    <FrameLayout
        android:id="@+id/mediatoolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#80000000"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingLeft="15dp"
            android:background="@android:color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请选择上传方式"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"/>
            <TextView
                android:id="@+id/tocapture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="拍照"
                android:gravity="center|left"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/camera"
                android:drawablePadding="5dp"
                android:textColor="@android:color/black"/>
            <ImageView
                android:id="@+id/devider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"/>
            <TextView
                android:id="@+id/tomediachoose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/picture"
                android:text="相册"
                android:gravity="center|left"
                android:drawablePadding="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>